<view><view class="home-pic"><image class="cover-pic" src="{{api+info.bgImage}}" mode="scaleToFill"></image><view class="home-pic-base"><view class="top-pic"><image class="header" src="{{api+info.avatar}}"></image><view class="name"><text>{{info.name}}</text><block wx:if="{{info.gender==0}}"><image class="icon_level" src="../../static/nan.png" mode></image></block><block wx:if="{{info.gender==1}}"><image class="icon_level" src="../../static/nv.png" mode></image></block></view><text class="name">{{info.region}}</text></view></view></view><view class="pet"><text class="title">宠物</text></view><view class="switch-box"><text>主页</text><text>相册</text></view><view class="dynamic" id="moments"><block wx:for="{{post}}" wx:for-item="post" wx:for-index="index" wx:key="index"><block wx:if="{{post.length!=0}}"><view class="moments__post" id="{{'post-'+index}}"><view class="post-left"></view><view class="post_right"><view class="paragraph" id="paragraph">{{post.content.text}}</view><view class="thumbnails"><block wx:for="{{post.content.video}}" wx:for-item="video" wx:for-index="index_video" wx:key="index_video"><view class="my-gallery-video"><video src="{{api+video}}" enable-play-gesture="true" vslide-gesture="true" controls></video></view></block></view><view class="thumbnails"><block wx:for="{{post.content.images}}" wx:for-item="image" wx:for-index="index_images" wx:key="index_images"><view class="{{[post.content.images.length===1?'my-gallery':'thumbnail']}}"><image class="gallery_img" lazy-load mode="aspectFill" src="{{api+image}}" data-src="{{image}}" data-event-opts="{{[['tap',[['previewImage',['$0',index_images],[[['post','',index,'content.images']]]]]]]}}" bindtap="__e"></image></view></block></view><view class="toolbar"><view class="timestamp">{{post.timestamp}}</view><view data-event-opts="{{[['tap',[['like',[index]]]]]}}" class="like" bindtap="__e"><image src="{{post.islike==0?'../../static/index/islike.png':'../../static/index/like.png'}}"></image></view><view data-event-opts="{{[['tap',[['comment',[index]]]]]}}" class="comment" bindtap="__e"><image src="../../static/index/comment.png"></image></view></view><block wx:if="{{post.comments.content.length!=0||post.likeList.length!=0}}"><view class="post-footer"><block wx:if="{{post.likeList.length!=0}}"><view class="footer_content"><image class="liked" src="../../static/index/liked.png"></image><block wx:for="{{post.likeList}}" wx:for-item="user" wx:for-index="index_like" wx:key="index_like"><image class="liked_avatar" src="{{api+user.avatar}}" mode></image></block></view></block><block wx:for="{{post.comments}}" wx:for-item="comment" wx:for-index="comment_index" wx:key="comment_index"><view data-event-opts="{{[['tap',[['reply',[index,comment_index]]]]]}}" class="footer_content" bindtap="__e"><image class="liked_avatar" src="{{api+comment.avatar}}" mode></image><text class="comment-nickname">{{comment.name}}<text>{{comment.to_name?'回复':''}}</text><text>{{comment.to_name?comment.to_name:''}}</text>:<text class="comment-content">{{comment.content}}</text></text></view></block></view></block></view></view></block></block></view><view class="footer"><view class="item"><image class="icon" src="../../static/add.png" mode></image><text>关注</text></view><view data-event-opts="{{[['tap',[['enterChat',['$event']]]]]}}" class="item" bindtap="__e"><image class="icon" src="../../static/chat.png" mode></image><text>私聊</text></view></view></view>