<view class="content"><view class="box"><image class="icon" src="{{info.avatar===''?'../../../static/camera.png':api+info.avatar}}" mode data-event-opts="{{[['tap',[['changeAvatar',['$event']]]]]}}" bindtap="__e"></image><view class="item"><text>宠物名称</text><input class="input-box" type="text" placeholder="设置宠物名称" placeholder-style="text-align:right" data-event-opts="{{[['input',[['petName',['$event']]]]]}}" value="{{info.name}}" bindinput="__e"/></view><view class="item"><text>宠物性别</text><picker mode="selector" range="{{genderArray}}" range-key="name" data-event-opts="{{[['change',[['petGender',['$event']]]]]}}" bindchange="__e"><input class="input-box" type="text" disabled="true" placeholder="选择宠物性别" placeholder-style="text-align:right" value="{{gender}}"/></picker></view><view class="item"><text>宠物品种</text><input class="input-box" type="text" disabled="true" placeholder="选择宠物品种" placeholder-style="text-align:right" data-event-opts="{{[['tap',[['petBreed',['$event']]]]]}}" value="{{info.breed}}" bindtap="__e"/></view><view class="item"><text>宠物生日</text><picker mode="date" data-event-opts="{{[['change',[['petBirthDay',['$event']]]]]}}" bindchange="__e"><input class="input-box" type="text" disabled="true" placeholder="选择宠物生日" placeholder-style="text-align:right" value="{{info.birthDay}}"/></picker></view><view class="item"><text>绝育状态</text><picker mode="selector" range="{{stateArray}}" data-event-opts="{{[['change',[['petState',['$event']]]]]}}" bindchange="__e"><input class="input-box" type="text" placeholder="绝育状态" disabled="true" placeholder-style="text-align:right" value="{{info.state}}"/></picker></view><view class="footer"><text data-event-opts="{{[['tap',[['updatePet',['$event']]]]]}}" class="button" bindtap="__e">保存</text></view></view></view>