page {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}
.item {
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.item .item-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 24rpx;
}
.item .item-box .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.item .item-box .name {
  display: inline-block;
  margin: 0 20rpx;
}

