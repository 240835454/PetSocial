page {
  background-color: #f9f9f9;
}
.box {
  text-align: center;
}
.box .icon {
  width: 120rpx;
  height: 120rpx;
  margin: 50rpx 0 30rpx;
  border: 1rpx solid rgba(224, 224, 224, 0.5);
  padding: 15rpx;
  border-radius: 50%;
  z-index: 10;
}
.box .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f6f6f6;
}
.box .item:last-child {
  border-bottom: none;
}
.box .item .input-box {
  text-align: right;
}
.box .footer .button {
  display: inline-block;
  padding: 15rpx 300rpx;
  background-color: #F2473D;
  border-radius: 20rpx;
  color: #fff;
}

