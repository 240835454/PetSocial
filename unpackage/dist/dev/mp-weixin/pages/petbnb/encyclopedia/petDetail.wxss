.item {
  padding-bottom: 60rpx;
}
.item .title {
  position: relative;
  display: block;
  padding: 10rpx 40rpx;
  margin-bottom: 20rpx;
  color: #b3b0b5;
  background-color: #f6f6f6;
}
.item .title::after {
  position: absolute;
  left: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  content: '';
  width: 5rpx;
  height: 25rpx;
  border-radius: 5rpx;
  background-color: #b3b0b5;
}
.item .avatar-box {
  padding: 40rpx 0 20rpx;
  text-align: center;
}
.item .avatar-box .avatar {
  width: 300rpx;
  height: 300rpx;
}
.item .baseData .baseData_item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 5rpx 20rpx;
}
.item .baseData .baseData_item .baseData_name {
  min-width: 160rpx;
}

