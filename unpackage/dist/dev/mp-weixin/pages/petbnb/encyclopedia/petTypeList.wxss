page {
  height: 100%;
}
.content {
  position: relative;
}
.content .search-box {
  padding: 20rpx;
  background-color: #f7f7f7;
  position: relative;
}
.content .search-box .input {
  padding: 10rpx 70rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.content .search-box .icon {
  position: absolute;
  top: 50%;
  -webkit-transform: translate(0, -50%);
          transform: translate(0, -50%);
  left: 40rpx;
}
.content .scroll-box {
  height: calc(100vh - 23rpx) !important;
  white-space: nowrap !important;
}
.content .title {
  padding: 2rpx 10rpx;
  background-color: #f7f7f7;
}
.content .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.content .item .icon {
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.content .item:last-child {
  border-bottom: none;
}
.content .list-shortcut {
  position: fixed;
  z-index: 30;
  right: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  width: 40rpx;
  padding: 40rpx 0;
  border-radius: 20rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.2);
  font-family: Helvetica;
}
.content .list-shortcut text {
  display: block;
  padding: 8rpx;
  line-height: 1;
  color: #fff;
  font-size: 24rpx;
}
.content .current {
  color: #ffcd32 !important;
}
.content .list-fixed {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.content .fixed-title {
  padding: 2rpx 10rpx;
  background-color: #f7f7f7;
}

