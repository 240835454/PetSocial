<view class="content"><view class="pet-box"><view class="pet-title"><text>成长中心</text><text data-event-opts="{{[['tap',[['addPet',['$event']]]]]}}" bindtap="__e">添加宠物</text></view><view class="pet-content"><block wx:if="{{petList.length===0}}"><text data-event-opts="{{[['tap',[['addPet',['$event']]]]]}}" class="no-pet" bindtap="__e">添加宠物更多惊喜</text></block><swiper class="swiper-box" indicator-dots="{{true}}" indicator-active-color="rgba(0,255,255,0.4)" autoplay="{{true}}" indicator-color="rgba(0,0,0,0.2)" interval="{{3000}}" duration="{{1000}}"><block wx:for="{{petList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><swiper-item class="swiper-item"><view><view class="top"><image class="avatar" src="{{api+item.avatar}}" mode="aspectFill"></image><text class="name">{{item.name}}</text><block wx:if="{{item.gender==1}}"><image class="icon_level" src="../../static/nan.png" mode></image></block><block wx:if="{{item.gender==2}}"><image class="icon_level" src="../../static/nv.png" mode></image></block><text>{{item.day+"天陪伴"}}</text></view><view class="bbb"><text class="breed">{{item.breed}}</text><text>{{item.state}}</text></view></view></swiper-item></block></swiper></view></view><view class="tabBar-box"><view class="flex"><view data-event-opts="{{[['tap',[['enterEncyclopedia',['$event']]]]]}}" class="item" bindtap="__e"><image src="../../static/18.png" mode="aspectFill"></image><view class="text-box"><text>宠物百科</text><text class="en-text">Pet encyclopedia</text></view></view><view data-event-opts="{{[['tap',[['enterAccount',['$event']]]]]}}" class="item" bindtap="__e"><image src="../../static/19.png" mode="aspectFill"></image><view class="text-box"><text>记账本</text><text class="en-text">Account book</text></view></view></view><view class="flex"><view data-event-opts="{{[['tap',[['enterArticle',['$event']]]]]}}" class="item" bindtap="__e"><image src="../../static/20.png" mode="aspectFill"></image><view class="text-box"><text>精选文章</text><text class="en-text">Featured Posts</text></view></view><view data-event-opts="{{[['tap',[['enterService',['$event']]]]]}}" class="item" bindtap="__e"><image src="../../static/22.png" mode="aspectFill"></image><view class="text-box"><text>同城服务</text><text class="en-text">Urban service</text></view></view></view></view></view>