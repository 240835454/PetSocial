<view class="page"><view hidden="{{!(Register)}}" class="content"><view class="logo-box"><image class="logo" src="../../static/icon_login_logo.png" mode></image></view><view class="item"><text class="name">手机号码</text><input class="input" type="text" placeholder="请输入您的手机号码" placeholder-class="color" data-event-opts="{{[['input',[['__set_model',['','account','$event',[]]]]]]}}" value="{{account}}" bindinput="__e"/></view><view class="item"><text class="name">手机验证码</text><input class="input" type="text" placeholder="请输入验证码" placeholder-class="color" data-event-opts="{{[['input',[['__set_model',['','msgCaptcha','$event',[]]]]]]}}" value="{{msgCaptcha}}" bindinput="__e"/><block wx:if="{{show}}"><button data-event-opts="{{[['tap',[['getCode',['$event']]]]]}}" class="button" bindtap="__e">获取验证码</button></block><block wx:if="{{!show}}"><button class="button" disabled="true">{{"重新发送"+count+"s"}}</button></block></view><view class="go-login"><text data-event-opts="{{[['tap',[['goLogin',['$event']]]]]}}" bindtap="__e">去登录</text></view><view class="footer"><text data-event-opts="{{[['tap',[['commitRegister',['$event']]]]]}}" class="commit" bindtap="__e">注册账号</text></view></view><view hidden="{{!(!Register)}}" class="content"><view class="logo-box"><image class="logo" src="../../static/icon_login_logo.png" mode></image></view><view class="info-box"><view class="item"><text class="name">新密码</text><input class="input" type="text" placeholder="请输入新密码" placeholder-class="color" data-event-opts="{{[['input',[['__set_model',['','name','$event',[]]]]]]}}" value="{{name}}" bindinput="__e"/></view><view class="item"><text class="name">确认密码</text><input class="input" type="text" placeholder="请再次输入密码" placeholder-class="color" data-event-opts="{{[['input',[['__set_model',['','name','$event',[]]]]]]}}" value="{{name}}" bindinput="__e"/></view></view><view class="footer"><text data-event-opts="{{[['tap',[['Login',['$event']]]]]}}" class="commit" bindtap="__e">登录</text></view></view></view>