page {
  background-color: #fff;
}
.content {
  padding: 50rpx 105rpx 0;
  margin: 0;
}
.content .logo-box {
  margin-bottom: 90rpx;
  text-align: center;
}
.content .logo-box .logo {
  width: 200rpx;
  height: 200rpx;
}
.content .info-box {
  margin: 120rpx 0;
}
.content .item {
  position: relative;
  color: #575d6e;
  letter-spacing: 1rpx;
}
.content .item .name {
  display: block;
  padding: 20rpx;
}
.content .item .input {
  padding: 0 20rpx 20rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.content .item .button {
  position: absolute;
  right: 0;
  bottom: 20rpx;
  display: inline-block;
  padding: 5rpx 30rpx;
  border: 1rpx solid #F2473D;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #F2473D;
  letter-spacing: 1rpx;
  z-index: 10;
}
.content .item .captcha {
  position: absolute;
  right: 0;
  bottom: 20rpx;
  width: 210rpx;
  height: 70rpx;
  z-index: 10;
}
.content .item .color {
  color: #ccd0da;
  letter-spacing: 1rpx;
}
.content .go-login {
  padding: 40rpx 0 0;
  text-align: right;
  font-size: 30rpx;
  color: #F2473D;
}
button {
  background-color: #fff;
  padding: 0;
}

